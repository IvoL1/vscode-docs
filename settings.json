{
  // ‚úèÔ∏è Editor
  "editor.fontFamily": "MonoLisa, monospace",
  "editor.fontSize": 13,
  "editor.lineHeight": 2.5,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "none",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.smoothScrolling": true,
  "editor.codeActionsOnSave": { "source.fixAll.eslint": "always" },
  "editor.bracketPairColorization.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.codeLens": false,
  "editor.colorDecorators": false,
  "editor.links": false,
  "editor.matchBrackets": "never",
  "editor.parameterHints.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.hover.above": false,
  "scm.diffDecorations": "none",
  "editor.showFoldingControls": "never",
  "editor.guides.indentation": true,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorBlinking": "solid",
  "eyecons.theme": "inherit",
  "eyecons.folderColor": "yellow",
  "eyecons.hidesExplorerArrows": true,
  "explorer.compactFolders": false,
  "editor.fontLigatures": true,
  "editor.letterSpacing": 1.5,

  // üìÑ Arquivos
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.exclude": {
    "node_modules": true,
    "dist": true,
    ".git": true,
    ".env.example": true,
    ".gitignore": false,
    ".prettierignore": true,
    "biome.json": false,
    "bun.lock": true,
    "eslint.config.mjs": false,
    "package-lock.json": true,
    "tsconfig.json": false,
    "yarn.lock": true,
    ".dockerignore": true,
    "Dockerfile": false,
    "tsconfig.node.json": true,
    "tsconfig.app.json": true,
    "vite-env.d.ts": true
  },

  // üíª Terminal
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.scrollback": 100,
  "terminal.integrated.fontFamily": "MonoLisa",
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.lineHeight": 1.5,

  // üñ•Ô∏è Workbench & Janela
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "default",
  "workbench.editor.showTabs": "multiple",
  "workbench.panel.showLabels": false,
  "workbench.tree.indent": 24,
  "window.zoomLevel": 2,
  "window.menuBarVisibility": "hidden",
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "breadcrumbs.enabled": false,
  "breadcrumbs.filePath": "off",
  "explorer.confirmDelete": false,
  "window.title": "‚ö° zeus ‚ö°",

  // üîí Seguran√ßa
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.untrustedFiles": "open",

  // üß© Extens√µes & Linguagens
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  "[prisma]": { "editor.defaultFormatter": "Prisma.prisma" },
  "[yaml]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[dockerfile]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // üü¶ TypeScript & JavaScript
  "typescript.tsdk": "node_modules/typescript/lib",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,

  // üìù Spell Checker
  "cSpell.enabled": true,
  "cSpell.language": "en,pt",
  "cSpell.ignoreWords": [
    "bunx",
    "carlos",
    "datasource",
    "dependencias",
    "dotenv",
    "eslintcache",
    "jose",
    "mydb",
    "originalname",
    "outdir",
    "playload",
    "postgres",
    "postgresql",
    "sqlite",
    "tailwindcss",
    "treeify",
    "verifyhash",
    "whatsapp",
    "zeus"
  ],

  // üìö Markdown
  "markdown-preview-enhanced.codeBlockTheme": "github-dark.css",
  "markdown-preview-enhanced.previewTheme": "github-dark.css",

  // üß© Outros
  "extensions.ignoreRecommendations": true,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.layoutControl.enabled": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "explorer.confirmDragAndDrop": false,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "workbench.colorTheme": "Japandi Nightfall",
  "workbench.iconTheme": "eyecons"
}
