{
  "editor.fontFamily": "MonoLisa, monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 25,
  "editor.cursorStyle": "line",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "none",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.smoothScrolling": true,
  "editor.codeActionsOnSave": { "source.fixAll.eslint": "always" },

  "[prisma]": { "editor.defaultFormatter": "Prisma.prisma" },
  "[yaml]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[dockerfile]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "node_modules": true,
    "dist": true,
    ".git": true,
    ".env.example": true,
    ".gitignore": false,
    ".prettierignore": true,
    "biome.json": false,
    "bun.lock": true,
    "eslint.config.mjs": false,
    "package-lock.json": true,
    "tsconfig.json": false,
    "yarn.lock": true,
    ".dockerignore": true,
    "Dockerfile": true
  },
  "files.eol": "\n",

  "terminal.integrated.fontSize": 12,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 100,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",

  "typescript.tsdk": "node_modules/typescript/lib",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,

  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "default",
  "workbench.editor.showTabs": "multiple",
  "window.zoomLevel": 1.5,
  "window.title": "${üê¶‚Äç‚¨õ Zeus}",
  "window.menuBarVisibility": "hidden",
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "breadcrumbs.filePath": "off",
  "workbench.tree.indent": 16,

  "security.workspace.trust.banner": "never",
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.ignoreRecommendations": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "workbench.colorTheme": "Origamid Next",
  "workbench.iconTheme": "eyecons",

  "cSpell.enabled": true,
  "cSpell.language": "en,pt",
  "cSpell.ignoreWords": [
    "bunx",
    "carlos",
    "datasource",
    "dependencias",
    "dotenv",
    "eslintcache",
    "jose",
    "mydb",
    "originalname",
    "outdir",
    "playload",
    "postgres",
    "postgresql",
    "sqlite",
    "treeify",
    "whatsapp",
    "zeus"
  ],

  "editor.bracketPairColorization.enabled": false,
  "editor.letterSpacing": 0.7,
  "window.titleBarStyle": "custom",
  "workbench.panel.showLabels": false,
  "editor.stickyScroll.enabled": false,
  "markdown-preview-enhanced.codeBlockTheme": "github-dark.css",
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "explorer.confirmDelete": false
}
